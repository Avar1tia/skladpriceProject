<Page x:Class="skladprice.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:skladprice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">
    
    <Grid>
        <DataGrid x:Name="ReportDataGrid" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Button Content="Экспорт в EXCEL" HorizontalAlignment="Center"
                Height="100" Width="200" VerticalAlignment="Bottom" Click="ExportToCsv_Click" 
                Style="{StaticResource CustomButtonStyle}"/>
    </Grid>
</Page>
